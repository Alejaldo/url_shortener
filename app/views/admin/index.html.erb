<div class="container my-5">
  <h1 class="mb-4"><%= t('admin_dashboard.title') %></h1>

  <table class="table table-striped table-hover">
    <thead class="thead-dark">
      <tr>
        <th scope="col"><%= t('admin_dashboard.short_url') %></th>
        <th scope="col"><%= t('admin_dashboard.original_url') %></th>
        <th scope="col"><%= t('admin_dashboard.click_count') %></th>
      </tr>
    </thead>
    <tbody>
      <% @urls.each do |url| %>
        <tr>
          <td><%= url.short_url %></td>
          <td><%= url.original_url %></td>
          <td><%= url.click_count %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
